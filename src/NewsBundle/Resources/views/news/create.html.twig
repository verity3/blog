{% extends '@News/Layout/layout.html.twig' %}

{% block title %} {{ 'Create'|trans }} {% endblock %}

{% block body %}

    <div class="container">
        <section class="panel">
            <div class="panel-body">
              
                <div class="row">
                    <div class="col-md-6 offset-md-6">
                        <h3>Create news post</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 offset-md-6">
                        {{ form_start(form,{heading: 'New', 'attr': {'novalidate': 'novalidate'} }) }}
                        
                        {% include 'NewsBundle:news:_form.html.twig' %}
                        
                      
                        {{ form_rest(form, {offsetClass: ' '}) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %} 
