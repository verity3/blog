{% extends '@Blog/Layout/layout.html.twig' %}

{% block title %} {{ 'Blog'|trans }} {% endblock %}

{% block body %}
   
    <div class="container">
        <section class="panel">            
            <div class="panel-body">
               
                <div class="row">
                    <div class="col-md-6 offset-md-6">
                        <h3>{{ 'Blog Posts' }}</h3>
                        <a class="btn btn-primary" href="{{ path('blog_create') }}">{{ 'New' }}</a>
                        <!--Table-->              
                        <table class="table table-striped table-condensed">  
                            <!--Table head-->
                            <thead>
                                <tr>         
                                    <th class="th-lg">Action</th>
                                    <th class="th-lg">Title</th>
                                    <th class="th-lg">Date</th>
                                    <th class="th-lg">Url</th>
                                    <th class="th-lg">Active</th>
                                    <th class="th-lg">Views</th>
                                </tr>
                            </thead>
                            <!--Table head-->
                            <!--Table body-->
                            <tbody>
                                {% for post in pagination %}
                                    <tr>
                                        <td><a href="{{ path('blog_edit',{'id': post.secureId}) }}">{{ 'Edit' }}</a></td>
                                        <td>{{ post.title }}</td>
                                        <td>{{ post.date|date('d-m-Y') }}</td>
                                        <td>{{ post.url }}</td>
                                        <td>{% if post.active == 1 %}{{ 'Active' }}{% else %}{{ 'Unactive' }}{% endif %}</td>
                                        <td>{{ post.visits }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <!--Table body-->
                        </table>
                        <div class="pagination container">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %} 
