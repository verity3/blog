{% extends '@Blog/Layout/layout.html.twig' %}

{% block title %} {{ 'Edit'|trans }} {% endblock %}

{% block body %}
    <div class="container">
        <section class="panel">
            <div class="panel-body">
               
                <div class="row">
                    <div class="col-md-6 offset-md-6">
                        <h3>Edit blog post</h3>
                    </div>
                </div>
                <div class="col-md-6 offset-md-6">

                    {{ form_start(form,{heading: 'Edit', 'attr': {'novalidate': 'novalidate'} }) }}
                    {% include 'BlogBundle:blog:_form.html.twig' %}
                    {{ form_rest(form, {offsetClass: ' '}) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>

{% endblock %} 
