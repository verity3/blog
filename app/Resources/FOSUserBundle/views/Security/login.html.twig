{% extends "FOSUserBundle::layout.html.twig" %}
{% block stylesheets %}

    <link href="{{ asset('builds/css/bootstrap.css') }}" rel="stylesheet">
{% endblock %}
{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}
    <link href="{{ asset('builds/css/bootstrap.css') }}" rel="stylesheet">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <section class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6 offset-md-6">
                        <h2>Login</h2>
                    </div>
                </div>
                <form action="{{ path("fos_user_security_check") }}" method="post" >
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div class="row">
                        <div class="col-md-6 offset-md-6">
                            <div class="form-group">
                                <label for="username">{{ 'Username'|trans }}</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control"/>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6 offset-md-6">
                            <div class="form-group">
                                <label for="password">{{ 'Password'|trans }}</label>
                                <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control"/>
                            </div>
                        </div>

                    </div>

                    <div>
                        <input type="submit" id="_submit" name="_submit" value="{{ 'Login'|trans }}" class="btn btn-default"/>
                    </div>
                </form>
            </div>
        </section>
    </div>
{% endblock fos_user_content %}